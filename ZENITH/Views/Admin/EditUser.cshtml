@model ZENITH.Models.ApplicationUser
@{
    ViewData["Title"] = " Edit User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header border-0"><h3 class="card-title">Chỉnh sửa người dùng</h3></div>
        <div class="card-body">
            <form asp-action="EditUser" asp-controller="Admin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <label>Họ tên</label>
                    <input class="form-control" name="FullName" value="@Model.FullName" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" name="Email" value="@Model.Email" />
                </div>
                <button class="btn btn-primary" type="submit">Lưu</button>
                <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-outline-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>