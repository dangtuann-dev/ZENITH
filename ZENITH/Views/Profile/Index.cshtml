@using ZENITH.Models
@using ZENITH.ViewModels
@{
    ViewData["Title"] = "| Hồ Sơ Cá Nhân";
}
<main class="profile">
    <div class="container">
        <!-- Search bar -->
        <div class="profile-container">
            <div class="search-bar d-none d-md-flex">
                <input type="text" name="" id="" placeholder="Tìm kiếm sản phẩm" class="search-bar__input" />
                <button class="search-bar__submit">
                    <img src="~/image/icons/search.svg" alt="" class="search-bar__icon icon" />
                </button>
            </div>
        </div>

        <!-- Profile content -->
        <div class="profile-container">
            <div class="row gy-md-3">
                <partial name="_ProfilePartial" />
                <div class="col-9 col-xl-8 col-lg-7 col-md-12">
                    <div class="cart-info">
                        <div class="row gy-3">
                            <!-- Payment method (COD only) -->
                            <div class="col-12">
                                <h2 class="cart-info__heading">Phương thức thanh toán</h2>
                                <p class="cart-info__desc profile__desc">Mặc định: Tiền mặt khi nhận hàng (COD)</p>
                            </div>

                            <!-- Account info -->
                            <div class="col-12">
                                <h2 class="cart-info__heading">Thông tin tài khoản</h2>
                                <p class="cart-info__desc profile__desc">
                                    Địa chỉ, thông tin liên hệ và mật khẩu
                                </p>
                                <div class="row gy-md-2 row-cols-2 row-cols-lg-1">
                                    <!-- Account info 1 -->
                                    <div class="col">
                                        <a asp-controller="Profile" asp-action="EditPersonalInfo">
                                            <article class="account-info">
                                                <div class="account-info__icon">
                                                    <img src="~/image/icons/message.svg" alt="" class="icon" />
                                                </div>
                                                <div>
                                                    <h3 class="account-info__title">Email</h3>
                                                    <p class="account-info__desc">
                                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Email as string)) {
                                                            @ViewBag.Email
                                                        } else {
                                                            <span style="color:#d90429">Vui lòng hoàn tất thông tin</span>
                                                        }
                                                    </p>
                                                </div>
                                            </article>
                                        </a>
                                    </div>

                                    <!-- Account info 2 -->
                                    <div class="col">
                                        <a asp-controller="Profile" asp-action="EditPersonalInfo">
                                            <article class="account-info">
                                                <div class="account-info__icon">
                                                    <img src="~/image/icons/calling.svg" alt="" class="icon" />
                                                </div>
                                                <div>
                                                    <h3 class="account-info__title">Số điện thoại</h3>
                                                    <p class="account-info__desc">
                                                        @if (!string.IsNullOrWhiteSpace(ViewBag.PhoneNumber as string)) {
                                                            @ViewBag.PhoneNumber
                                                        } else {
                                                            <span style="color:#d90429">Vui lòng hoàn tất thông tin</span>
                                                        }
                                                    </p>
                                                </div>
                                            </article>
                                        </a>
                                    </div>

                                    <!-- Account info 3 -->
                                    <div class="col">
                                        <a asp-controller="Profile" asp-action="EditAddressInfo" asp-route-addressId="@((ViewBag.DefaultAddressId ?? 0))">
                                            <article class="account-info">
                                                <div class="account-info__icon">
                                                    <img src="~/image/icons/location.svg"
                                                         alt=""
                                                         class="icon" />
                                                </div>
                                                <div>
                                                    <h3 class="account-info__title">Địa chỉ nhận hàng mặc định</h3>
                                                    <p class="account-info__desc">
                                                        @if (!string.IsNullOrWhiteSpace(ViewBag.DefaultAddress as string)) {
                                                            @ViewBag.DefaultAddress
                                                        } else {
                                                            <span style="color:#d90429">Vui lòng hoàn tất thông tin</span>
                                                        }
                                                    </p>
                                                </div>
                                            </article>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <h2 class="cart-info__heading">Danh sách yêu thích</h2>
                                @{ var favs = ViewBag.Favorites as System.Collections.Generic.List<FavoritesIndexItemViewModel>; }
                                <p class="cart-info__desc profile__desc">@((favs?.Count ?? 0)) sản phẩm</p>

                                @if (favs != null && favs.Count > 0) {
                                    var displayCount = Math.Min(favs.Count, 2);
                                    for (int i = 0; i < displayCount; i++) {
                                        var it = favs[i];
                                        <article class="favourite-item">
                                            <img src="@it.ImageUrl"
                                                 alt="@it.ProductName"
                                                 class="favourite-item__thumb" />
                                            <div style="display:flex;flex-direction:column;">
                                                <h3 class="favourite-item__title">
                                                    @it.ProductName
                                                </h3>
                                                <div class="favourite-item__content" style="margin-top:auto;">
                                                    <span class="favourite-item__price">@it.PriceFormatted</span>
                                                    <button class="btn btn--primary btn--rounded js-add-to-cart-profile" data-variant-id="@it.VariantId">Thêm vào giỏ</button>
                                                </div>
                                            </div>
                                        </article>
                                        @if (i < displayCount - 1) { <div class="separate" style="--margin: 20px"></div> }
                                    }
                                    <div class="separate" style="--margin: 20px"></div>
                                    <a class="btn btn--text" asp-controller="Favorites" asp-action="Index">Xem thêm</a>
                                } else {
                                    <p class="profile__desc">Chưa có sản phẩm yêu thích.</p>
                                    <a class="btn btn--text" asp-controller="Favorites" asp-action="Index">Xem thêm</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
