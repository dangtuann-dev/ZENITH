@using ZENITH.Models
@using ZENITH.ViewModels
@{
    ViewData["Title"] = "| Hồ Sơ Cá Nhân";
}
<main class="profile">
    <div class="container">
        <!-- Search bar -->
        <div class="profile-container">
            <div class="search-bar d-none d-md-flex">
                <input type="text" name="" id="" placeholder="Tìm kiếm sản phẩm" class="search-bar__input" />
                <button class="search-bar__submit">
                    <img src="~/image/icons/search.svg" alt="" class="search-bar__icon icon" />
                </button>
            </div>
        </div>

        <!-- Profile content -->
        <div class="profile-container">
            <div class="row gy-md-3">
                <partial name="_ProfilePartial" />
                <div class="col-9 col-xl-8 col-lg-7 col-md-12">
                    <div class="cart-info">
                        <div class="row gy-3">
                            <!-- My Wallet -->
                            <div class="col-12">
                                <h2 class="cart-info__heading">Ví của tôi</h2>
                                <p class="cart-info__desc profile__desc">Phương thức thanh toán</p>

                                <style>
                                    .payment-card__logo-img{width:40px;height:auto}
                                    .payment-card__top{display:flex;align-items:center;gap:8px}
                                    .payment-card__type{font-weight:600}
                                </style>
                                <div class="row gy-md-2 row-cols-3 row-cols-xl-2 row-cols-lg-1">
                                    @{ var cards = ViewBag.PaymentMethods as List<PaymentMethod>; }
                                    @if (cards != null && cards.Count > 0)
                                    {
                                        foreach (var c in cards)
                                        {
                                            <div class="col">
                                                <article class="payment-card">
                                                    <div class="payment-card__top">
                                                        @{ var t = (c.CardType ?? "").Trim().ToLowerInvariant(); var logo = t == "visa" ? "~/image/icons/visa.svg" : t == "mastercard" ? "~/image/icons/mastercard.svg" : t == "jcb" ? "~/image/icons/jcb.svg" : t == "amex" ? "~/image/icons/amex.svg" : "~/image/icons/zenith-logo.png"; }
                                                        <div class="payment-card__logo">
                                                            <img src="@Url.Content(logo)" alt="@c.CardType" class="payment-card__logo-img" onerror="this.style.display='none';var f=this.closest('.payment-card__logo').querySelector('.payment-card__logo-fallback');if(f)f.style.display='inline-block';" />
                                                            <span class="payment-card__logo-fallback" style="display:none">@c.CardType</span>
                                                        </div>
                                                        <span class="payment-card__type">@c.CardType</span>
                                                    </div>
                                                    <div class="payment-card__number">
                                                        @{ var last4 = !string.IsNullOrWhiteSpace(c.CardNumber) && c.CardNumber.Length >= 4 ? c.CardNumber.Substring(c.CardNumber.Length - 4) : c.CardNumber; }
                                                        **** **** **** @last4
                                                    </div>
                                                    <div class="payment-card__bottom">
                                                        <div class="payment-card__holder">
                                                            <p class="payment-card__label">Card Holder</p>
                                                            <p class="payment-card__value">@c.CardHolder</p>
                                                        </div>
                                                        <div class="payment-card__expired">
                                                            <p class="payment-card__label">Expired</p>
                                                            <p class="payment-card__value">@c.ExpiryDate</p>
                                                        </div>
                                                        <div class="payment-card__circle"></div>
                                                    </div>
                                                </article>
                                            </div>
                                        }
                                    }
                                    @if (cards == null || cards.Count < 3)
                                    {
                                        <div class="col">
                                            <a class="new-card" asp-controller="Profile" asp-action="AddNewCard">
                                                <img src="~/image/icons/plus.svg" alt="" class="new-card__icon icon" />
                                                <p class="new-card__text">Thêm thẻ mới</p>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Account info -->
                            <div class="col-12">
                                <h2 class="cart-info__heading">Thông tin tài khoản</h2>
                                <p class="cart-info__desc profile__desc">
                                    Địa chỉ, thông tin liên hệ và mật khẩu
                                </p>
                                <div class="row gy-md-2 row-cols-2 row-cols-lg-1">
                                    <!-- Account info 1 -->
                                    <div class="col">
                                        <a asp-controller="Profile" asp-action="EditPersonalInfo">
                                            <article class="account-info">
                                                <div class="account-info__icon">
                                                    <img src="~/image/icons/message.svg" alt="" class="icon" />
                                                </div>
                                                <div>
                                                    <h3 class="account-info__title">Email</h3>
                                                    <p class="account-info__desc">
                                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Email as string)) {
                                                            @ViewBag.Email
                                                        } else {
                                                            <span style="color:#d90429">Vui lòng hoàn tất thông tin</span>
                                                        }
                                                    </p>
                                                </div>
                                            </article>
                                        </a>
                                    </div>

                                    <!-- Account info 2 -->
                                    <div class="col">
                                        <a asp-controller="Profile" asp-action="EditPersonalInfo">
                                            <article class="account-info">
                                                <div class="account-info__icon">
                                                    <img src="~/image/icons/calling.svg" alt="" class="icon" />
                                                </div>
                                                <div>
                                                    <h3 class="account-info__title">Số điện thoại</h3>
                                                    <p class="account-info__desc">
                                                        @if (!string.IsNullOrWhiteSpace(ViewBag.PhoneNumber as string)) {
                                                            @ViewBag.PhoneNumber
                                                        } else {
                                                            <span style="color:#d90429">Vui lòng hoàn tất thông tin</span>
                                                        }
                                                    </p>
                                                </div>
                                            </article>
                                        </a>
                                    </div>

                                    <!-- Account info 3 -->
                                    <div class="col">
                                        <a asp-controller="Profile" asp-action="EditAddressInfo" asp-route-addressId="@((ViewBag.DefaultAddressId ?? 0))">
                                            <article class="account-info">
                                                <div class="account-info__icon">
                                                    <img src="~/image/icons/location.svg"
                                                         alt=""
                                                         class="icon" />
                                                </div>
                                                <div>
                                                    <h3 class="account-info__title">Địa chỉ nhận hàng mặc định</h3>
                                                    <p class="account-info__desc">
                                                        @if (!string.IsNullOrWhiteSpace(ViewBag.DefaultAddress as string)) {
                                                            @ViewBag.DefaultAddress
                                                        } else {
                                                            <span style="color:#d90429">Vui lòng hoàn tất thông tin</span>
                                                        }
                                                    </p>
                                                </div>
                                            </article>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <h2 class="cart-info__heading">Danh sách yêu thích</h2>
                                @{ var favs = ViewBag.Favorites as System.Collections.Generic.List<FavoritesIndexItemViewModel>; }
                                <p class="cart-info__desc profile__desc">@((favs?.Count ?? 0)) sản phẩm</p>

                                @if (favs != null && favs.Count > 0) {
                                    var displayCount = Math.Min(favs.Count, 2);
                                    for (int i = 0; i < displayCount; i++) {
                                        var it = favs[i];
                                        <article class="favourite-item">
                                            <img src="@it.ImageUrl"
                                                 alt="@it.ProductName"
                                                 class="favourite-item__thumb" />
                                            <div style="display:flex;flex-direction:column;">
                                                <h3 class="favourite-item__title">
                                                    @it.ProductName
                                                </h3>
                                                <div class="favourite-item__content" style="margin-top:auto;">
                                                    <span class="favourite-item__price">@it.PriceFormatted</span>
                                                    <button class="btn btn--primary btn--rounded js-add-to-cart-profile" data-variant-id="@it.VariantId">Thêm vào giỏ</button>
                                                </div>
                                            </div>
                                        </article>
                                        @if (i < displayCount - 1) { <div class="separate" style="--margin: 20px"></div> }
                                    }
                                    <div class="separate" style="--margin: 20px"></div>
                                    <a class="btn btn--text" asp-controller="Favorites" asp-action="Index">Xem thêm</a>
                                } else {
                                    <p class="profile__desc">Chưa có sản phẩm yêu thích.</p>
                                    <a class="btn btn--text" asp-controller="Favorites" asp-action="Index">Xem thêm</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
