@using ZENITH.Models
@{
    ViewData["Title"] = "| Thiết Lập Mật Khẩu";
}
<main class="profile">
    <div class="container">
        <!-- Search bar -->
        <div class="profile-container">
            <div class="search-bar d-none d-md-flex">
                <input type="text" name="" id="" placeholder="Tìm kiếm sản phẩm" class="search-bar__input" />
                <button class="search-bar__submit">
                    <img src="~/image/icons/search.svg" alt="" class="search-bar__icon icon" />
                </button>
            </div>
        </div>

        <!-- Profile content -->
        <div class="profile-container">
            <div class="row gy-md-3">
                <partial name="_ProfilePartial" />
                <div class="col-9 col-xl-8 col-lg-12">
                    <div class="cart-info">
                        <div class="row gy-3">
                            <div class="col-12">
                                <h2 class="cart-info__heading">
                                    <a asp-controller="Profile" asp-action="Index">
                                        <img src="~/image/icons/arrow-left.svg"
                                             alt=""
                                             class="icon cart-info__back-arrow" />
                                    </a>
                                    Đổi mật khẩu
                                </h2>

                                <form asp-controller="Profile" asp-action="EditPassword" method="post" class="form form-card">
                                    @Html.AntiForgeryToken()
                                    <!-- Form row 1 -->
                                    <div class="form__row">
                                        <div class="form__group">
                                            <label for="currentPassowrd" class="form__label form-card__label">
                                                Mật khẩu hiện tại
                                            </label>
                                            <div class="form__text-input">
                                                <input type="password"
                                                       name="currentPassword"
                                                       id="currentPassowrd"
                                                       placeholder="Mật khẩu hiện tại"
                                                       class="form__input"
                                                       required />
                                                <img src="~/image/icons/form-error.svg"
                                                     alt=""
                                                     class="form__input-icon-error" />
                                            </div>
                                            <p class="form__error">Vui lòng nhập mật khẩu hiện tại</p>
                                        </div>
                                    </div>
                                    <div class="form__row">
                                        <div class="form__group">
                                            <label for="newPassowrd" class="form__label form-card__label">
                                                Mật khẩu mới
                                            </label>
                                            <div class="form__text-input">
                                                <input type="password"
                                                       name="newPassword"
                                                       id="newPassowrd"
                                                       placeholder="Mật khẩu mới"
                                                       class="form__input"
                                                       required />
                                                <img src="~/image/icons/form-error.svg"
                                                     alt=""
                                                     class="form__input-icon-error" />
                                            </div>
                                            <p class="form__error">Vui lòng nhập mật khẩu mới</p>
                                        </div>
                                    </div>
                                    <!-- Form row 3 -->
                                    <div class="form__row">
                                        <div class="form__group">
                                            <label for="ConfirmedPassowrd" class="form__label form-card__label">
                                                Nhập lại mật khẩu mới
                                            </label>
                                            <div class="form__text-input">
                                                <input type="password"
                                                       name="confirmPassword"
                                                       id="ConfirmedPassowrd"
                                                       placeholder="Nhập lại mật khẩu mới"
                                                       class="form__input"
                                                       required />
                                                <img src="~/image/icons/form-error.svg"
                                                     alt=""
                                                     class="form__input-icon-error" />
                                            </div>
                                            <p class="form__error">Vui lòng nhập lại mật khẩu mới</p>
                                        </div>
                                    </div>

                                    <div class="form-card__bottom">
                                        <a class="btn btn--text" asp-controller="Profile" asp-action="Index">Hủy</a>
                                        <button class="btn btn--primary btn--rounded">Lưu</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
